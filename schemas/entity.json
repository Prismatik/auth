{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "entity - entities",
  "description": "An entity",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "id": {
      "description": "unique identifier of entity",
      "example": "01234567-89ab-cdef-0123-456789abcdef",
      "format": "uuid",
      "type": "string"
    },
    "created_at": {
      "description": "when entity was created",
      "example": "2012-01-01T12:00:00Z",
      "format": "date-time",
      "type": "string"
    },
    "updated_at": {
      "description": "when entity was updated",
      "example": "2012-01-01T12:00:00Z",
      "format": "date-time",
      "type": "string"
    },
    "emails": {
      "type": "array",
      "items": {
        "example": "bob@example.com",
        "type": "string",
        "format": "email"
      }
    },
    "name": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "full": {
          "type": "string",
          "example": "Doris McCafferty"
        },
        "short": {
          "type": "string",
          "example": "Doris"
        }
      }
    },
    "password": {
      "description": "entity's password",
      "example": "s3cr3t",
      "type": "string"
    },
    "permissions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/permission"
      }
    },
    "permission": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "example": "membership"
        },
        "entity": {
          "type": "string",
          "example": "01234567-89ab-cdef-0123-456789abcdef"
        }
      }
    }
  },
  "links": [
    {
      "description": "create a new entity",
      "href": "/entities",
      "method": "POST",
      "rel": "create",
      "schema": {
        "properties": {
          "emails": {
            "$ref": "#/definitions/emails"
          },
          "name": {
            "$ref": "#/definitions/name"
          },
          "password": {
            "$ref": "#/definitions/password"
          },
          "permissions": {
            "$ref": "#/definitions/permissions"
          }
        },
        "type": [
          "object"
        ]
      },
      "title": "Create"
    },
    {
      "description": "get info for existing entity",
      "href": "/entities/{(%23%2Fdefinitions%2Fid)}",
      "method": "GET",
      "rel": "self",
      "title": "Info"
    },
    {
      "description": "update existing entity",
      "href": "/entities/{(%23%2Fdefinitions%2Fid)}",
      "method": "PATCH",
      "rel": "update",
      "schema": {
        "properties": {
          "emails": {
            "$ref": "#/definitions/emails"
          },
          "name": {
            "$ref": "#/definitions/name"
          },
          "password": {
            "$ref": "#/definitions/password"
          },
          "permissions": {
            "$ref": "#/definitions/permissions"
          }
        },
        "type": [
          "object"
        ]
      },
      "title": "Update"
    },
    {
      "description": "remove an existing entity",
      "href": "/entities/{(%23%2Fdefinitions%2Fid)}",
      "method": "DELETE",
      "rel": "delete",
      "title": "Delete"
    }
  ],
  "id": "/entity",
  "properties": {
    "id": {
      "$ref": "#/definitions/id"
    },
    "created_at": {
      "$ref": "#/definitions/created_at"
    },
    "updated_at": {
      "$ref": "#/definitions/updated_at"
    },
    "emails": {
      "$ref": "#/definitions/emails"
    },
    "name": {
      "$ref": "#/definitions/name"
    },
    "password": {
      "$ref": "#/definitions/password"
    },
    "permissions": {
      "$ref": "#/definitions/permissions"
    },
    "inherited_permissions": {
      "$ref": "#/definitions/permissions"
    }
  }
}
